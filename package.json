{
  "name": "defra-saucedemo-test-automation",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js && npm run generate-reports && npm run view-reports",
    "test:headed": "cucumber-js --world-parameters \"{\\\"headed\\\": true}\" && npm run generate-reports && npm run view-reports",
    "test:ui": "playwright test --ui",
    "test:tdd": "playwright test && npm run report",
    "test:tdd:headed": "playwright test --headed && npm run report",
    "test:tdd:ui": "playwright test --ui",
    "test:tdd:debug": "playwright test --debug",
    "test:login": "playwright test login.spec.ts",
    "test:cart": "playwright test cart.spec.ts",
    "test:checkout": "playwright test checkout.spec.ts",
    "test:bdd": "cucumber-js",
    "test:bdd:headed": "cucumber-js --world-parameters \"{\\\"headed\\\": true}\"",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:debug": "cucumber-js --profile debug",
    "test:regression": "cucumber-js --tags @regression",
    "test:authentication-bdd": "cucumber-js --tags @authentication",
    "test:cart-bdd": "cucumber-js --tags @cart",
    "test:checkout-bdd": "cucumber-js --tags @checkout",
    "test:sorting-bdd": "cucumber-js --tags @sorting",
    "test:playwright:shard": "playwright test --shard=1/4",
    "test:playwright:shard:1": "cross-env SHARD_INDEX=1 TOTAL_SHARDS=4 node sharding.config.js",
    "test:playwright:shard:2": "cross-env SHARD_INDEX=2 TOTAL_SHARDS=4 node sharding.config.js",
    "test:playwright:shard:3": "cross-env SHARD_INDEX=3 TOTAL_SHARDS=4 node sharding.config.js",
    "test:playwright:shard:4": "cross-env SHARD_INDEX=4 TOTAL_SHARDS=4 node sharding.config.js",
    "setup:env": "echo 'SHARD_INDEX=1\nTOTAL_SHARDS=4\nCI=false\nHEADED=false\nBROWSER=chromium\nTEST_TAGS=@regression\nGENERATE_REPORTS=true\nWORKERS=2' > .env",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "cucumber:report": "cucumber-js --format html:cucumber-report.html",
    "generate-reports": "cucumber-js --format html:reports/cucumber-report.html",
    "generate-reports:headed": "cross-env HEADED=true cucumber-js --format html:reports/cucumber-report.html",
    "view-reports": "start reports/cucumber-report.html",
    "view-playwright-report": "playwright show-report",
    "view-all-reports": "start reports/cucumber-report.html && playwright show-report",
    "view-accessibility": "start reports/accessibility-report.html",
    "view-performance": "start reports/performance-report.html",
    "generate-reports:json": "cucumber-js --format json:reports/cucumber-report.json",
    "generate-reports:all": "cucumber-js --format progress-bar --format html:reports/cucumber-report.html --format json:reports/cucumber-report.json",
    "view-screenshots": "start screenshots",
    "test:shard:all": "run-all-shards.bat",
    "test:shard:parallel": "concurrently \"npm run test:playwright:shard:1\" \"npm run test:playwright:shard:2\" \"npm run test:playwright:shard:3\" \"npm run test:playwright:shard:4\"",
    "test:shard:sequential": "npm run test:playwright:shard:1 && npm run test:playwright:shard:2 && npm run test:playwright:shard:3 && npm run test:playwright:shard:4",
    "test:bdd:shard:all": "run-bdd-shards.bat",
    "test:bdd:shard:parallel": "run-bdd-shards.bat parallel",
    "test:bdd:shard:sequential": "run-bdd-shards.bat",
    "test:bdd:shard:ps": "powershell -ExecutionPolicy Bypass -File run-bdd-shards.ps1",
    "test:bdd:shard:ps:parallel": "powershell -ExecutionPolicy Bypass -File run-bdd-shards.ps1 parallel",
    "test:bdd:shard:1": "cross-env SHARD_INDEX=1 TOTAL_SHARDS=4 node bdd-sharding.config.js",
    "test:bdd:shard:2": "cross-env SHARD_INDEX=2 TOTAL_SHARDS=4 node bdd-sharding.config.js",
    "test:bdd:shard:3": "cross-env SHARD_INDEX=3 TOTAL_SHARDS=4 node bdd-sharding.config.js",
    "test:bdd:shard:4": "cross-env SHARD_INDEX=4 TOTAL_SHARDS=4 node bdd-sharding.config.js",
    "test:bdd:shard:smoke": "cross-env TAGS=@smoke node bdd-sharding.config.js",
    "test:bdd:shard:critical": "cross-env TAGS=@critical node bdd-sharding.config.js",
    "test:bdd:shard:headed": "cross-env HEADED=true node bdd-sharding.config.js",
    "test:tdd:shard:all": "run-tdd-shards.bat",
    "test:tdd:shard:parallel": "run-tdd-shards.bat parallel",
    "test:tdd:shard:ps": "powershell -ExecutionPolicy Bypass -File run-tdd-shards.ps1",
    "test:tdd:shard:ps:parallel": "powershell -ExecutionPolicy Bypass -File run-tdd-shards.ps1 parallel",
    "test:tdd:shard:1": "cross-env SHARD_INDEX=1 TOTAL_SHARDS=3 node tdd-sharding.config.js",
    "test:tdd:shard:2": "cross-env SHARD_INDEX=2 TOTAL_SHARDS=3 node tdd-sharding.config.js",
    "test:tdd:shard:3": "cross-env SHARD_INDEX=3 TOTAL_SHARDS=3 node tdd-sharding.config.js",
    "test:tdd:shard:headed": "cross-env HEADED=true node tdd-sharding.config.js",
    "merge:reports": "npx cucumber-json-merge reports/cucumber-report-1.json reports/cucumber-report-2.json reports/cucumber-report-3.json reports/cucumber-report-4.json -o reports/cucumber-report.json && npm run generate-reports",
    "merge:bdd:reports": "npx cucumber-json-merge reports/cucumber-report-shard-1.json reports/cucumber-report-shard-2.json reports/cucumber-report-shard-3.json reports/cucumber-report-shard-4.json -o reports/cucumber-report.json && npm run generate-reports",
    "merge:tdd:reports": "npx playwright merge-reports --reporter html reports/playwright-report-shard-*.json -o reports/playwright-report.html",
    "merge:playwright:reports": "npx playwright merge-reports --reporter html test-results/",
    "test:all": "npm test && npm run test:tdd && npm run view-all-reports",
    "test:all:headed": "npm run test:headed && npm run test:tdd:headed && npm run view-all-reports"
  },
  "keywords": [
    "bdd",
    "cucumber",
    "playwright",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "description": "BDD Test Automation Framework for Sauce Demo E-commerce Website",
  "devDependencies": {
    "@cucumber/cucumber": "^10.9.0",
    "@playwright/test": "^1.53.2",
    "@types/cucumber": "^7.0.0",
    "@types/node": "^24.0.10",
    "axe-playwright": "^2.1.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "lighthouse": "^12.7.1",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "playwright": "^1.53.2",
    "playwright-lighthouse": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wd": "^0.0.26"
  }
}
